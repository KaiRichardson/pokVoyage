{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@screens/*": ["src/screens/*"],
			"@services/*": ["src/services/*"],
			"@store/*": ["src/store/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"],
			"@hooks/*": ["src/hooks/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
	"exclude": ["node_modules"]
}
